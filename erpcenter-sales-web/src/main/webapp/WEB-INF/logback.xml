	<!--日志打印的包的范围，及分类日志文件存储 -->  
    <logger name="com.man.erpcenter" additivity="false">  
        <level value="DEBUG" />  
        <appender-ref ref="STDOUT"/>  
        <appender-ref ref="ERROR"/>  
        <appender-ref ref="WARN"/>  
        <appender-ref ref="INFO" />  
    </logger> 
    <root level="INFO">  
        <appender-ref ref="STDOUT" />  
     </root>
</configuration>